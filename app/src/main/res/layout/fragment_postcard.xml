<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.admin123.citytour.Fragments.PostcardFragment">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_postcard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        tools:context="com.example.admin123.citytour.PostcardFragment">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize" />


            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:id="@+id/uploaded_image"
                android:src="@drawable/birmingham_new_street"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Upload your own photo"
                android:id="@+id/upload_photo"
                android:drawableRight="@drawable/ic_menu_camera"
                android:paddingRight="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/custom_button"/>


        <EditText
            android:id="@+id/postcard_message"
            android:layout_width="fill_parent"
            android:layout_height="125dp"
            android:paddingLeft="5dp"
            android:layout_marginTop="15dp"
            android:paddingTop="5dp"
            android:gravity="top|left"
            android:hint="Add a short message to your image..."
            android:inputType="textCapSentences|textMultiLine"
            android:background="@drawable/text_box_style"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/preview_postcard"
            android:text="Preview Postcard"
            android:layout_marginTop="15dp"
            android:drawableRight="@drawable/preview_icon_small"
            android:paddingRight="20dp"
            android:background="@drawable/custom_button"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/share_postcard"
            android:text="Share"
            android:textSize="40dp"
            android:layout_marginTop="15dp"
            android:drawableRight="@drawable/ic_menu_share"
            android:paddingRight="30dp"
            android:background="@drawable/custom_button"/>
    </LinearLayout>

</FrameLayout>
